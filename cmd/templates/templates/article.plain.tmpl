{{- define "header" -}}
    {{- .FilterInfo}} | {{- "Total news items:" | print }} {{ .TotalItems }}
----------------------------------------------------------------
{{ end }}

{{- define "content" -}}
    {{- if eq .TotalItems 0 -}}
        No news available for this period
    {{else}}

    {{- $keywords := .Keywords }}
        {{- range .NewsItems -}}
            {{- highlight .Title $keywords | println "" }}
            {{- highlight .Description $keywords  }}
            {{- .Link }}
            {{- .PubDate  }}
----------------------------------------------------------------
        {{end}}
    {{end}}
{{end}}

{{- template "header" . -}}
{{- template "content" . -}}